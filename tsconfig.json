{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "outDir": "./dist/",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "pretty": true,
    "strict": true,
    "sourceMap": true,
    "typeRoots": [
      "./src/shared/types/generated",
      "./node_modules/@types",
      "./node_modules"
    ],
    "types": [
      "node",
      "vite/client",
      "vite-plugin-svg-icons/client.d.ts",
      "./global.d.ts"
    ],
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "vite.config.*",
    "global.d.ts",
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.vue",
    "src/**/*.d.ts"
  ]
}
